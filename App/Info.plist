<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Required bundle identity -->
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundleDisplayName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>$(CURRENT_PROJECT_VERSION)</string>

	<!-- Live Activities -->
	<key>NSSupportsLiveActivities</key>
	<true/>
	<key>NSSupportsLiveActivitiesFrequentUpdates</key>
	<true/>

	<!-- Location permission texts (required for "Always") -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Diese App erfasst deine Position, um deine Fahrt aufzuzeichnen.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Diese App zeichnet deine Position auch im Hintergrund auf, damit Fahrten vollständig aufgezeichnet werden können.</string>

	<!-- Bluetooth permission text (recommended if you use BT) -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>Sensorwerte werden für die OpenBikeSensor-Aufzeichnung gespeichert.</string>

	<!-- Background modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>bluetooth-central</string>
		<string>location</string>
	</array>

	<!-- Launch screen -->
	<key>UILaunchScreen</key>
	<dict>
		<key>UIColorName</key>
		<string>LaunchBackground</string>
		<key>UIImageName</key>
		<string>LaunchLogo</string>
	</dict>
</dict>
</plist>
